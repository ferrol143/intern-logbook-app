generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("users")
}

model Activity {
  id            String   @id @default(cuid())
  author        String
  date          String
  activity      String
  type          String
  start_time    DateTime
  end_time      DateTime
  work_type     String
  location      String
  description   String?   // optional
  proof         String?   // stores file path or URL
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("activities") // database table name
}

enum Role {
  USER
  ADMIN
}